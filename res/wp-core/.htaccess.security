<IfModule mod_alias.c>
    RedirectMatch 403 (?i)^/(?!\.well-known/).*/\.
</IfModule>

<FilesMatch "\.(txt|log)$">
    Order allow,deny
    Deny From all
</FilesMatch>

<FilesMatch "^(readme\.html|wp-blog-header\.php|wp-comments-post\.php|wp-config-sample\.php|wp-links-opml\.php|wp-load\.php|wp-mail\.php|wp-settings\.php|wp-signup\.php|wp-trackback\.php|xmlrpc\.php)$">
    Order allow,deny
    Deny From all
</FilesMatch>

<FilesMatch "^(robots\.txt|security\.txt|llms\.txt)$">
    Order allow,deny
    Allow From all
</FilesMatch>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^wp-admin/includes/ - [F,L]
    RewriteRule !^wp-includes/ - [S=4]
    RewriteRule ^wp-includes/ms-files\.php$ - [S=3]
    RewriteRule ^wp-includes/[^/]+\.php$ - [F,L]
    RewriteRule ^wp-includes/js/tinymce/langs/.+\.php - [F,L]
    RewriteRule ^wp-includes/theme-compat/ - [F,L]
</IfModule>
